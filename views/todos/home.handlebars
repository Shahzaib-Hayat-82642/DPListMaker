    <div class ="list">
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>details</th>
            <th>category</th>
            <th>dueDate</th>
            <th>time</th>
            <th>priority</th>
            <th>notifyme</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each todos}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.details}}</td>
            <td>{{this.category}}</td>
            <td>{{this.dueDate}}</td>
            <td>{{this.time}}</td>
            <td>{{this.priority}}</td>
            <td>{{this.notifyme}}</td>
            <td>
                <a href="/todos/edit/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/todos/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
